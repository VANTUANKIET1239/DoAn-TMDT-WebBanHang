
@{
    ViewData["Title"] = "QuenMatKhau";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>QuenMatKhau</h1>
<div class="d-flex justify-content-center padding-large no-padding-bottom">
    <div class="card w-50">
        <div class="card-header text-center">
            <h3>Quên Mật Khẩu</h3>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="User" asp-action="QuenMatKhau">
                <div class="form-group mb-3">
                    <label for="email" class="control-label">Email</label>
                    <input name="email" type="email" class="form-control" placeholder="Vui lòng nhập email" required/>
                    <span id="validation" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center padding-small no-padding-bottom">
                    <button class="btn btn-warning">Xác Nhận</button>
                </div>

            </form>
        </div>
    </div>
</div>


@model Dictionary<string,string>
@{
    ViewData["Title"] = "MatKhauMoi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center padding-large no-padding-bottom">
    <div class="card w-25">
        <div class="card-header text-center">
            <h3>Xác Nhận Email</h3>
            <div class="d-flex justify-content-center">
                <div class="d-lfex justify-content-center" style="width:150px;height:25px">
                    <span class="text-danger" id="demthoigian"></span>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="User" asp-action="MatKhauMoi">
                <input type="hidden" name="emailxn" value="@ViewBag.emailxn" />
                <div class="form-group">
                    <label for="matkhaucu" class="control-label">Mật khẩu cũ</label>
                    <input name="matkhaucu" type="password" class="form-control" placeholder="Nhập mật khẩu cũ" required />
                    <span style="@(Model.ContainsKey(ViewBag.valid == null ? "" : ViewBag.valid) ? "display:flex" : "display:none")" id="validation_matkhaucu" class="text-danger">@Model[ViewBag.valid == null ? "" : ViewBag.valid]</span>
                </div>
                <div class="form-group">
                    <label for="matkhaumoi" class="control-label">Mật khẩu mới</label>
                    <input name="matkhaumoi" type="password" class="form-control" placeholder="Nhập mật khẩu mới" required />
                    <span style="@(Model.ContainsKey(ViewBag.valid == null ? "" : ViewBag.valid)  ? "display:flex" : "display:none")" id="validation_matkhaumoi" class="text-danger">@Model[ViewBag.valid == null ? "" : ViewBag.valid]</span>
                </div>
                <div class="form-group">
                    <label for="xacnhanmatkhaumoi" class="control-label">Xác nhận mật khẩu mới</label>
                    <input name="xacnhanmatkhaumoi" type="password" class="form-control" placeholder="Xác nhận mật khẩu mới" required />
                    <span style="@(Model.ContainsKey(ViewBag.valid == null ? "" : ViewBag.valid)  ? "display:flex" : "display:none")" id="validation_xacnhanmatkhaumoi" class="text-danger">@Model[ViewBag.valid == null ? "" : ViewBag.valid]</span>
                </div>
                <div class="d-flex justify-content-center padding-small no-padding-bottom">
                    <input type="submit" class="btn btn-success" value="Đổi mật khẩu" />
                </div>
            </form>
        </div>
    </div>
</div>


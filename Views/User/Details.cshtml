
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutChuaDN.cshtml";
}

<div class="container padding-large">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-row align-baseline">
                        <div class="me-2">
                            <img class="img-fluid" style="height:50px;width:50px;" />
                        </div>
                        <div>
                            <p class="no-margin">Tài Khoản Của</p>
                            <h5>Văn Tuấn Kiệt</h5>
                        </div>
                    </div>
                    <div class="d-flex flex-column align-baseline mt-2">
                        <div class="mb-3">
                            <a class="custom-a" asp-controller="User" asp-action="Details"><i class='bx bxs-user-account'></i> Thông Tin Tài Khoản</a>
                        </div>
                        <div class="mb-3">                           
                            <a class="custom-a" asp-controller="User" asp-action="DonHang"> <i class='bx bx-receipt'></i> Quản Lý Đơn Hàng</a>
                        </div>
                        <div class="mb-3">
                            <a class="custom-a" asp-controller="User" asp-action="DiaChi"><i class='bx bx-map'></i> Sổ Địa Chỉ</a>
                        </div>
                       
                       
                    </div>
                    
                </div>
            </div>    
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-8">
                    <div class="card w-100">
                        <div class="card-header text-center">
                            <h4>Thông Tin Tài Khoản</h4>
                        </div>
                        <div class="card-body">
                            <form asp-controller="DiaChi" asp-action="ThemDiaChi">
                                <div class="form-group mb-3">
                                    <label class="control-label">Email</label>
                                    <input class="form-control" placeholder="Vui lòng nhập email" />
                                </div>

                                <div class="form-group mb-3">
                                    <label class="control-label">Số Điện Thoại</label>
                                    <input class="form-control" placeholder="Vui lòng nhập SDT" />
                                </div>
                                <div class="form-group mb-3">
                                    <label class="control-label">Địa Chỉ</label>
                                    <input class="form-control" placeholder="Vui lòng nhập Địa Chỉ" />
                                </div>
                                <div class="form-group mb-3">
                                    <label class="control-label">Ngày Sinh</label>
                                    <input type="date" class="form-control" />
                                </div>
                               
                                <div class="row d-flex justify-content-end">
                                    <div class="col-md-6 text-end">
                                     
                                        <button class="btn btn-dark w-100">Cật Nhật</button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card w-100">
                        <div class="card-header text-center">
                            <h4>Địa Chỉ Mặc Định</h4>
                        </div>
                        <div class="card-body">
                            <form asp-controller="DiaChi" asp-action="ThemDiaChi">
                                <div class="form-group mb-3">
                                    <label class="control-label">Tỉnh/Thành phố</label>
                                    <input class="form-control"  readonly/>
                                </div>

                                <div class="form-group mb-3">
                                    <label class="control-label">Quận/Huyện</label>
                                    <input class="form-control"  readonly />
                                </div>
                                <div class="form-group mb-3">
                                    <label class="control-label">Phường/Xã</label>
                                    <input class="form-control" readonly />
                                </div>
                                <div class="form-group mb-3">
                                    <label class="control-label">Địa chỉ cụ thể</label>
                                    <input class="form-control" readonly />
                                </div>
                               
                                

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>   


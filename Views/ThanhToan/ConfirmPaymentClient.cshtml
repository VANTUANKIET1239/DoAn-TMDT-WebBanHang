
@{
    ViewData["Title"] = "ConfirmPaymentClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container  padding-large no-padding-bottom">
    <div class="row bg-light-blue d-flex justify-content-center align-content-center" style="height:200px;">
        <img class="img-fluid" src="~/checked.png" style="height:80px; width:110px " />
        <div class="d-flex justify-content-center mt-2">
            <h5> Thanh toán thành công, mã đơn hàng của bạn là @ViewBag.ME</h5>
        </div>
        <div class="d-flex flex-row justify-content-center p-2">
            <a  asp-controller="User" asp-action="ChiTietDonHang" asp-route-iddonhang="@ViewBag.ME" class="btn btn-dark me-2">Theo dõi đơn hàng</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark">Quay về trang chủ</a>
        </div>
    </div>
</div>



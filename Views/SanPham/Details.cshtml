                    <div class="kiet swiper-slide">
                        <div style="width:100px;height:100px;">
                            <img class="hinhphu img-fluid" src="~/images/dhl.png" />
                        </div>
                    </div>
                    <div class="kiet swiper-slide">
                        <div style="width:100px;height:100px;">
                            <img class="hinhphu img-fluid" src="~/images/image.png" />
                        </div>

                    </div>
                    <div class="kiet swiper-slide">
                        <div style="width:100px;height:100px;">
                            <img class="hinhphu img-fluid" src="~/images/hehe.png" />
                        </div>

                    </div>
                </div>
             </div>
        </div>
    </div>
    <div class="nav-align-top mb-4 padding-medium">
        <ul class="nav nav-tabs nav-fill" role="tablist">
            <li class="nav-item">
                <button type="button"
                        class="nav-link active"
                        role="tab"
                        data-bs-toggle="tab"
                        data-bs-target="#navs-justified-home"
                        aria-controls="navs-justified-home"
                        aria-selected="true">
                    <i class="tf-icons bx bx-home"></i> Thông Tin Chi Tiết
                    <span class="badge rounded-pill badge-center h-px-20 w-px-20 bg-label-danger">3</span>
                </button>
            </li>
            <li class="nav-item">

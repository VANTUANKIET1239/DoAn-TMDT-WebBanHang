    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row padding-large no-padding-bottom"> 
        <div class="col-md-6 border-dark bg-light-blue" style="position:relative">

            
            <img style="width:500px;height:500px;" id="hinhchinh" class="img-fluid" src="~/images/SALE.png" />

        </div>
        <div class="col-md-6 d-flex flex-column">
